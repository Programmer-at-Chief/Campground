<% layout('layouts/boilerplate') %>

<div class=" bg-neutral-800 text-gray-900 flex justify-center w-full flex-1 py-12 shadow-lg ">
  <div class = 'absolute max-w-screen-xl bg-gradient-to-br from-pink-400 to-cyan-400 via-yellow-400 flex w-[1135px] h-[500px] mt-7 rounded-xl blur'>
    
  </div>
  <!--<div class="relative max-w-screen-xl sm:m-8 bg-blue-950 shadow sm:rounded-xl flex justify-center shadow-2xl w-[80vw]">-->
  <div class="relative max-w-screen-xl sm:m-8 bg-blue-950 shadow sm:rounded-xl flex justify-center shadow-2xl w-[1125px]">
    <div class="lg:w-1/2 xl:w-5/12 sm:p-12 m-3 mr-0 rounded-xl border-2 border-cyan-200 ">
      <div class="mt-12 flex flex-col items-center">
        <h1 class="text-2xl xl:text-3xl font-extrabold text-cyan-200">
          Sign In
        </h1>
        <div class="w-full flex-1 mt-8">
          <form class="mx-auto max-w-xs" method = 'post' action = '/user/login'>
            <input
              class="w-full px-8 py-3 rounded-lg font-medium bg-blue-900 border-[3px] border-cyan-500 placeholder-cyan-500 text-cyan-500 text-lg focus:outline-none focus:border-green-400 focus:bg-blue-950 hover:border-cyan-300 focus:text-cyan-600"
              type="text" placeholder="Username" name = 'username' />
            <input
              class="w-full px-8 py-3 rounded-lg font-medium bg-blue-900 border-[3px] border-cyan-500 placeholder-cyan-500 text-cyan-500 text-lg focus:outline-none focus:border-green-400 focus:bg-blue-950 mt-5 hover:border-cyan-300 focus:text-cyan-600"
              type="password" placeholder="Password" name = 'password'/>
            <button
              class="mt-5 tracking-wide font-semibold text-cyan-200 mx-auto w-[60%] py-[9px] rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline hover:opacity-100 focus:outline-none hover:text-white bg-gradient-to-r from-blue-800 to-purple-800 via-cyan opacity-70 active:bg-indigo-800">
              <span class="ml-3 text-lg ">
                LOGIN
              </span>
            </button>
          </form>
        </div>
        <p class = 'mt-[22px] text-[17px] text-white'>Don't have an account ? <a class = 'ml-2 text-blue-300 bold underline-offset-4 hover:text-blue-200 hover:underline' href="/user/register">Sign Up</a></p>
      </div>
    </div>
    <div class="flex-1 bg-blue-950 text-center hidden lg:flex rounded-xl p-2">
      <div class="m-5  xl:m-0 w-full bg-cover bg-center bg-no-repeat rounded-xl overflow-hidden"
        style="background-image: url('https://res.cloudinary.com/meinkampf/image/upload/v1735913349/camp_login_sbchxg.jpg');">
      </div>
    </div>
  </div>
</div>

