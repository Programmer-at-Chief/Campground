<% layout('layouts/boilerplate') %>
<div class = 'mt-3'>

  <% for (let ground of camps) {%>
  <div class = 'mb-3 mx-20 border-[1px] border-gray-200 '>
    <div class = 'flex'>
      <div class = 'w-1/3 bg-gray-100'>
        <img class="max-w-full h-auto p-4" src="<%=ground.image%>" alt="<%=ground.title%>">

      </div>
      <div class = 'w-2/3 ml-4 pb-2'>
        <div class = 'card-body p-2 '>
          <h5 class = 'card-title text-2xl'><%=ground.title%></h5>
          <p class = 'my-2'><%= ground.description%></p>
          <p class = 'text-gray-500 mb-3'>Location: <%- `${ground.city}, ${ground.state}`%></p>
          <a class = "bg-blue-500 py-2 px-4 m-2 rounded-md border-2 border-blue-600 hover:bg-blue-600 text-white" href="/campgrounds/<%=ground._id%>">View <%=ground.title%></a>
        </div>

      </div>

    </div>


  </div>
  <%}%>

</div>
