<% layout('layouts/boilerplate') %>
<div class = 'pt-3 bg-gradient-to-br from-pink-200 to-blue-200 min-h-screen'>

  <% for (let ground of camps) {%>
  <div class = 'mb-3 mx-20 border-[1px] border-slate-400 shadow-md  rounded-lg'>
    <div class = 'flex rounded-lg'>
      <div class = 'w-1/3 bg-gray-100 rounded-lg'>
        <%if (ground.images.length>0){%>
        <img class="max-w-full h-auto p-4 bg-cyan-200" src="<%=ground.images[0].url%>" alt="<%=ground.title%>">
        <%}else{%>
        <img class="max-w-full h-auto p-4 bg-cyan-200" src="https://res.cloudinary.com/meinkampf/image/upload/v1735676199/error_jw3vqk.png" alt="<%=ground.title%>">
        <%}%>
      </div>
      <div class = 'w-2/3 ml-4 pb-2'>
        <div class = 'card-body p-2 '>
          <h5 class = 'card-title text-2xl'><%=ground.title%></h5>
          <p class = 'my-2'><%= ground.description%></p>
          <p class = 'text-gray-500 mb-3'>Location: <%- `${ground.state}, ${ground.country}`%></p>
          <a class = "bg-blue-500 py-2 px-4 m-2 rounded-md border-2 border-blue-600 hover:bg-blue-600 text-white" href="/campgrounds/<%=ground._id%>">View <%=ground.title%></a>
        </div>

      </div>

    </div>


  </div>
  <%}%>

</div>
